@model IEnumerable<DocumentTaskMvc.Models.Document>


<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<div class="container mt-5">
    <h1 class="mb-4">Documents</h1>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Document Name</th>
                <th>Upload Date</th>
                <th>User</th>
                <th>Command</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model)
            {
                <tr>
                    <td>@document.Title</td>
                    <td>@document.CreatedDate.ToShortDateString()</td>
                    <td>@document.User?.Username</td>
                    <td>
                        <a href="@Url.Action("Download", "Documents", new { id = document.DocumentsId })" class="btn btn-success btn-sm">Download</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>